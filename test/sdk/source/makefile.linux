################################################################################
# Include common definitions.

include $(AQROOT)/makefile.linux.def

################################################################################
# Supply additional include directories.
ifeq ($(EGL_API_FB), 0)
ifeq ($(EGL_API_DFB), 1)
CFLAGS += $(INCLUDE) -DFBDriver
else
CFLAGS += $(INCLUDE) -DX11
endif
else
CFLAGS += $(INCLUDE) -DFBDriver
endif

INCLUDE += -I$(AQROOT) -I$(VIVANTE_SDK_INC)/HAL -I$(AQROOT)/sdk/inc

ifeq ($(EGL_API_FB), 0)
INCLUDE += -I$(X11_ARM_DIR)/include
endif

CFLAGS += $(INCLUDE)

################################################################################
# Describe object files.

OBJECTS = $(OBJ_DIR)/gc_sdk_startup_linux.o \
          $(OBJ_DIR)/gc_sdk_thread_linux.o \
          $(OBJ_DIR)/gc_sdk_misc_linux.o \
          $(OBJ_DIR)/gc_sdk_visual_x.o \
          $(OBJ_DIR)/gc_sdk_visual_fbdev.o \
          $(OBJ_DIR)/gc_sdk_visual.o

################################################################################
# Define a shortcut for the main target.

STATIC		:= 1
TARGET_NAME	:= libVivanteDK.a

################################################################################
# Define the macros used in common makefile.

################################################################################
# Include the common makefile.

include $(AQROOT)/common.target
