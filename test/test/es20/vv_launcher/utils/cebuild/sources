APPCONFIG   = windows
EXEENTRY    = mainACRTStartup
TARGETNAME  = es20_vv_launcher
TARGETTYPE  = PROGRAM
WARNISERROR = 0

SOURCES=\
  ..\..\lib\glutils\check.c \
  ..\..\lib\glutils\dds.c \
  ..\..\lib\glutils\log.c \
  ..\..\lib\glutils\program.c \
  ..\..\lib\glutils\Texture2D.c \
  ..\..\lib\glutils\Texture2DRenderSurface.c \
  ..\..\lib\glutils\TextureCube.c \
  ..\..\lib\math\icosa.c \
  ..\..\lib\math\Mat.c \
  ..\..\lib\math\misc.c \
  ..\..\lib\math\Vec.c \
  ..\..\lib\rc\resource.c \
  ..\..\src\Chiclet.c \
  ..\..\src\ChicletProg.c \
  ..\..\src\ContentProg.c \
  ..\..\src\EnvProg.c \
  ..\..\src\Geodesic.c \
  ..\..\src\LauncherApp.c \
  ..\..\src\resources.c \
  ..\..\src\vv_main.c \


INCLUDES=$(INCLUDES);	\
	$(_SYSGENSDKROOT)\inc;	\
	$(VIVANTE_SDK_INC);$(VIVANTE_SDK_INC)/HAL;$(AQROOT)/sdk/inc;	\
	..\..\lib\glutils;	\
	..\..\lib\math;	\
	..\..\lib\rc;	\
	..\..\src;	\
	..\..\;	\
	..\..\lib\;	\

{..\..\lib\glutils}.c{$(_OBJDIR)\}.obj :
	@$(GCHAL_C_COMPILING_COMMAND)

{..\..\lib\math}.c{$(_OBJDIR)\}.obj :
	@$(GCHAL_C_COMPILING_COMMAND)

{..\..\lib\rc}.c{$(_OBJDIR)\}.obj :
	@$(GCHAL_C_COMPILING_COMMAND)

{..\..\src}.c{$(_OBJDIR)\}.obj :
	@$(GCHAL_C_COMPILING_COMMAND)

TARGETLIBS= \
  $(_SYSGENSDKROOT)\lib\$(_CPUINDPATH)\coredll.lib \
  $(VIVANTE_SDK_LIB)\libEGL.lib \
  $(VIVANTE_SDK_LIB)\libVDK.lib \
  $(VIVANTE_SDK_LIB)\libGLESv2.lib \

ROOT_DIR=$(AQROOT)\test\es20\vv_launcher

##########################################################
# Install results

INSTALL_PATH=$(VIVANTE_SDK_DIR)\samples\es20\vv_launcher
EXTRA_COMMAND =(  xcopy  /I /R /Y ..\..\src\shaders\*.frag $(INSTALL_PATH)\shaders\ \
  & xcopy  /I /R /Y ..\..\src\shaders\*.vert $(INSTALL_PATH)\shaders\ \
  & xcopy  /I /R /Y ..\..\src\textures\*.dds $(INSTALL_PATH)\textures\ )

