OBJECTS			:=	$(OBJ_DIR)/main.o \
				$(OBJ_DIR)/const_constant.o \
				$(OBJ_DIR)/const_constant_enum.o \
				$(OBJ_DIR)/const_global.o \
				$(OBJ_DIR)/const_global_enum.o \
