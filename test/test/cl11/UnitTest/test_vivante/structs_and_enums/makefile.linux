				$(OBJ_DIR)/restrict_private_enum.o \
				$(OBJ_DIR)/volatile_constant_enum.o \
				$(OBJ_DIR)/volatile_global.o \
				$(OBJ_DIR)/volatile_global_enum.o \
				$(OBJ_DIR)/volatile_local.o \
				$(OBJ_DIR)/volatile_local_enum.o \
				$(OBJ_DIR)/volatile_private.o \
