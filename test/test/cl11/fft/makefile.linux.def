##############################################
# Include the global difinitions.

include $(AQROOT)/makefile.linux.def

##############################################
# For C++ program, we need set CC=g++

CC ?= $(CROSS_COMPILE)g++

##############################################
# Supply additional include directories.

INCLUDE += -I$(VIVANTE_SDK_INC)

#CFLAGS += $(INCLUDE) -fPIC
CFLAGS += $(INCLUDE)

##############################################
# Supply necessary libraries.


# Specify Vivante library paths.
ifeq ($(gcdSTATIC_LINK), 1)
LIBS += $(SDK_LIB)/libOpenCL.a
LIBS += $(SDK_LIB)/libCLC.a
LIBS += $(SDK_LIB)/libclCompiler.a
LIBS += $(SDK_LIB)/libclPreprocessor.a
LIBS += $(SDK_LIB)/libclCommon.a
LIBS += $(SDK_LIB)/libVSC.a
LIBS += $(SDK_LIB)/libhalarchuser.a
LIBS += $(SDK_LIB)/libhalosuser.a
LIBS += $(SDK_LIB)/libGAL.a
LIBS += $(SDK_LIB)/libhalarchuser.a
LIBS += $(SDK_LIB)/libGAL.a
LIBS +=  $(LIB_DIR)/libm.a
LIBS +=  $(LIB_DIR)/libpthread.a
LIBS +=  $(LIB_DIR)/libc.a
LIBS +=  $(LIB_DIR)/libstdc++.a
LIBS +=  $(LIB_DIR)/libdl.a
LIBS +=  $(LIB_DIR)/librt.a
else
# Specify Vivante OpenCL libraries.
LIBS += -L $(VIVANTE_SDK_LIB) -l OpenCL
LIBS += -L $(VIVANTE_SDK_LIB) -l CLC

LIBS += -l m -l pthread -l dl -l stdc++ -l rt
ifeq ($(EGL_API_DRI), 1)
    LIBS += -L$(X11_ARM_DIR)/lib -Wl,-rpath-link,$(X11_ARM_DIR)/lib -lX11
endif
ifeq ($(EGL_API_X), 1)
    LIBS += -L$(X11_ARM_DIR)/lib -Wl,-rpath-link,$(X11_ARM_DIR)/lib -lX11
endif
ifeq ($(EGL_API_DFB), 1)
    LIBS += -L$(DFB_DIR)/lib -ldirectfb -ldirect -lfusion
endif
endif
