!IF "$(VIVANTE_ENABLE_3D)" != "1"
SKIPBUILD=1
!ENDIF

!IF "$(USE_OPENCL)" == "0"
SKIPBUILD=1
!ENDIF

!IF "$(BUILD_OPENCL_ICD)" == "0"
SKIPBUILD=1
!ENDIF

DOSYSGEN=1
SYNCHRONIZE_DRAIN=1
TARGETTYPE=DYNLINK
DLLENTRY=DllMain

TARGETNAME=libOpenCL

SOURCES= \
    ../icd.c \
    ../icd_windows.c \
    ../icd_dispatch.c

INCLUDES= \
  $(AQROOT)\sdk\inc; \
  $(AQROOT)\hal\inc; \

!IF "$(ENABLE_CL_GL)" == "1"
DEFFILE = ../libOpenCL.def
!ELSE
DEFFILE = ../libOpenCLWoGL.def
!ENDIF

CDEFINES=$(CDEFINES) -D_DLL_EXPORTS
CDEFINES=$(CDEFINES) -DBUILD_OPENCL_ICD=1

!IF "$(ENABLE_CL_GL)" == "1"
CDEFINES=$(CDEFINES) -DgcdENABLE_CL_GL=1
!ELSE
CDEFINES=$(CDEFINES) -DgcdENABLE_CL_GL=0
!ENDIF


TARGETLIBS= \
    $(LIBSYS) \
    $(_SYSGENSDKROOT)\lib\$(_CPUINDPATH)\coredll.lib \
