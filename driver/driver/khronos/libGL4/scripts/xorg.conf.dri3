#
# Sample /etc/X11/xorg.conf file for DRM/DRI3 device
#

Section "Device"
    Identifier  "Vivante DRM Device"
    Driver      "vivante"
    Option      "kmsdev"     "/dev/dri/card0"
EndSection

Section "ServerFlags"
    Option "BlankTime"  "0"
    Option "StandbyTime"  "0"
    Option "SuspendTime"  "0"
    Option "OffTime"  "0"
EndSection
