include $(AQROOT)/makefile.linux.def

ROOTDIR=$(AQROOT)/driver/khronos/libGL2
LIBS += -L$(AQROOT)/build/sdk/drivers -L$(ROOTFS_USR)/lib -L$(ROOTDIR)/lib
LIBS += -L$(AQROOT)/hal/user/$(OBJ_DIR)
LIBS += -L$(AQROOT)/compiler/libVSC/$(OBJ_DIR)
LFLAGS += -lm -lpthread -lGAL -lVSC -lGL -lXext -lX11 -ldl -lXfixes -lXdamage -ldrm

INSTALL = install
INSTDATFLAGS = -m 0444
INSTGLFLAGS = -m 0755

ifeq ($(DEBUG),1)
CFLAGS += -g -O0 -fPIC
else
CFLAGS += -O3 -fPIC
endif

CFLAGS += -D_LINUX_ -DPTHREADS -D_POSIX_SOURCE -D_POSIX_C_SOURCE=199309L -DDIRECT_TO_FB -DDISABLE_SWAP_THREAD -DUSE_CPU \
		-D__declspec=""

INCLUDE += \
	-I$(AQROOT)/hal/inc \
	-I$(AQROOT)/hal/user \
	-I$(AQROOT)/hal/user/arch \
	-I$(AQROOT)/hal/user/archvg \
	-I$(AQROOT)/hal/os/linux/user \
	-I$(AQROOT)/compiler/libVSC/include \
	-I$(AQROOT)/sdk/inc/GL \
	-I$(AQROOT)/sdk/inc \
    -I$(ROOTDIR)/include -I$(ROOTDIR)/include/gl \
    -I$(ROOTDIR)/include/dri -I$(ROOTDIR)/include/glcore \
	-I$(ROOTDIR)/include/chip \
	-I$(ROOTDIR)/include/dri \
	-I$(ROOTFS_USR)/include/arm-linux-gnueabi \
	-I$(ROOTFS_USR)/include/pixman-1 \
    -I$(ROOTFS_USR)/include \
	$(OSINCLUDEDIR)

CFLAGS += $(INCLUDE)
