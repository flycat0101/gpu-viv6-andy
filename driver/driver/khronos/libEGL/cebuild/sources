EXTRA_COMMAND = \
    xcopy /I /R /Y $(AQROOT)\sdk\inc\EGL\* $(VIVANTE_SDK_INC)\EGL\ & \
    xcopy /I /R /Y $(AQROOT)\sdk\inc\KHR\*.h $(VIVANTE_SDK_INC)\KHR\

