cc_library_headers {
    name: "libopenvx_headers",
    host_supported: false,
    export_include_dirs: ["ovx_inc"],
}


cc_defaults {
    name: "NeuralNetworksOvxDriver_defaults",
    defaults: ["neuralnetworks_defaults"],
    relative_install_path: "hw",
    cflags: [
        "-Wno-error=unused-function",
    ],
    proprietary: true,
     srcs: [
        "OvxDevice.cpp",
    ],
    header_libs: [
        "libneuralnetworks_headers",
        "libopenvx_headers",
    ],
    shared_libs: [
        "libbase",
        "libdl",
        "libhardware",
        "libhidlbase",
        "libhidlmemory",
        "libhidltransport",
        "libtextclassifier_hash",
        "liblog",
        "libutils",
        "android.hardware.neuralnetworks@1.0",
        "android.hidl.allocator@1.0",
        "android.hidl.memory@1.0",
        "libOpenVX",
    ],
    static_libs: [
        "libneuralnetworks_common",
    ],
}

cc_binary {
    name: "android.hardware.neuralnetworks@1.0-service-ovx-driver",
    defaults: ["NeuralNetworksOvxDriver_defaults"],
    init_rc: ["OvxDriver.rc"],
    srcs: ["OvxDriver.cpp", "OvxExecutor.cpp"]
}


