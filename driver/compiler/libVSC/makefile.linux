################################################################################
# Define targets.

.PHONY: all clean install

all: $(TARGET_MODULE)

clean:
	@rm -rf $(OBJ_DIR)

install: all
	@mkdir -p $(INSTALL_DIR)
	@-cp $(TARGET_MODULE) $(INSTALL_DIR)

################################################################################
# Module rules.

ifeq ($(STATIC),1)
$(TARGET_MODULE): $(OBJECTS)
	@echo "  ARCHIVE \033[1m$(notdir $@)\033[0m"
	@$(AR) -r -c $@ $(OBJECTS)
ifneq ($(USE_ARMCC), 1)
	@$(RANLIB) $@
endif
endif

ifeq ($(DYNAMIC),1)

$(TARGET_MODULE): $(wildcard $(AQROOT)/hal/user/$(OBJ_DIR)/libGAL.so \
                             $(AQROOT)/hal/user/$(OBJ_DIR)/libGAL.a)

$(TARGET_MODULE): $(OBJECTS)
	@echo "  LINK    \033[1m$(notdir $@)\033[0m"
	@$(CC) $(LDFLAGS) -o $@ $(OBJECTS) $(LIBS)
endif

################################################################################
# Object rules.

vpath
vpath %.c lib
vpath %.c old_impl
vpath %.c old_impl/optimizer

ifeq ($(VSC_VIR_BUILD),1)
  vpath %.c asm
  vpath %.c chip/gpu
  vpath %.c drvi
  vpath %.c utils
  vpath %.c utils/array
  vpath %.c utils/base
  vpath %.c utils/bitvector
  vpath %.c utils/graph
  vpath %.c utils/hash
  vpath %.c utils/io
  vpath %.c utils/list
  vpath %.c utils/mm
  vpath %.c utils/string
  vpath %.c utils/table
  vpath %.c utils/tree
  vpath %.c vir/analysis
  vpath %.c vir/codegen
  vpath %.c vir/ir
  vpath %.c vir/lower
  vpath %.c vir/linker
  vpath %.c vir/passmanager
  vpath %.c vir/transform
  vpath %.c debug
endif

$(OBJ_DIR)/%.o: %.c
	@echo "  COMPILE $(abspath $<)"
	@mkdir -p $(OBJ_DIR)
	@$(CC) -c $(CFLAGS) -MMD -o $@ $<

# object dependencies.
-include $(OBJECTS:.o=.d)

